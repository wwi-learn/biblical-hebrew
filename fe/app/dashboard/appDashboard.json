{
    "scope": "idPattern",
    "type": "containerSimple",
    "prps": {
        "singlePage": true,
        "backgroundColor": "themeBackground",
        "mainAxisAlign": "center",
        "crossAxisAlign": "center",
        "gap": "24px",
        "word": "...",
        "wordPattern": "...",
        "scps": [
                    {
                        "triggers": [
                            {
                                "event": "onMount"
                            }
                        ],
                        "actions": [
                            {
                                "type": "setVariable",
                                "name": "verbsRaw",
                                "value": "{theme.freeText.words.verbs}"
                            },
                            {
                                "type": "setVariable",
                                "name": "staticData",
                                "value": [
                                    "{{eval.",
                                    "    const res = JSON.parse({{variable.verbsRaw}});",
                                    "    res;",
                                    "}}"
                                ],
                                "inlineKeys": [
                                    "value"
                                ]
                            },
                            {
                                "type": "setState",
                                "target": "||idPattern||",
                                "key": "verbs",
                                "value": "{{variable.staticData}}"
                            },
                            {
                                "type": "getPealimData",
                                "extractRandomWord": true,
                                "target": "||idPattern||",
                                "verbs": "{{variable.staticData}}"
                            }
                        ]
                    }
                ]
    },
    "wgts": [
        {
            "traits": [
                {
                    "trait": "title",
                    "traitPrps": {
                        "title": "איזה דפוס"
                    }
                }
            ]
        },
        {
            "id": "NOTIFICATIONS",
            "type": "notifications",
            "prps": {
                "colorBackgroundDanger": "error"
            }
        },
        {
            "relId": "wordWidget",
            "type": "label",
            "prps": {
                "cpt": "",
                "color": "{theme.colors.themeWhite}",
                "fontSize": "24px",
                "flows": [
                    {
                        "from": "||idPattern||",
                        "fromKey": "word",
                        "toKey": "cpt"
                    }
                ]
            }
        },
        {
            "type": "containerSimple",
            "prps": {
                "autoChildMargins": true,
                "autoChildMarginsSize": "12px"
            },
            "wgts": [
                {
                    "type": "containerSimple",
                    "prps": {
                        "dir": "horizontal",
                        "autoChildMargins": true,
                        "autoChildMarginsSize": "12px"
                    },
                    "wgts": [
                        {
                            "traits": [
                                {
                                    "trait": "buttonPattern",
                                    "traitPrps": {
                                        "pattern": "pa'al"
                                    }
                                }
                            ]
                        },
                        {
                            "traits": [
                                {
                                    "trait": "buttonPattern",
                                    "traitPrps": {
                                        "pattern": "pi'el"
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "containerSimple",
                    "prps": {
                        "dir": "horizontal",
                        "autoChildMargins": true,
                        "autoChildMarginsSize": "12px"
                    },
                    "wgts": [
                        {
                            "traits": [
                                {
                                    "trait": "buttonPattern",
                                    "traitPrps": {
                                        "pattern": "hif'il"
                                    }
                                }
                            ]
                        },
                        {
                            "traits": [
                                {
                                    "trait": "buttonPattern",
                                    "traitPrps": {
                                        "pattern": "hitpa'el"
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "traits": [
                        {
                            "trait": "buttonPattern",
                            "traitPrps": {
                                "pattern": "nif'al"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}