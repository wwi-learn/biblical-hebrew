{
	"acceptPrps": {
		"pattern": {
			"type": "string",
			"desc": "The pattern name"
		}
	},
	"type": "button",
	"prps": {
		"cpt": "%pattern%",
		"value": "%pattern%",
		"fireScript": {
			"actions": [
				{
					"type": "applyComparison",
					"operator": "isEqual",
					"value": "{{state.||idPattern||.wordPattern}}",
					"compareValue": "{{state.self.value}}",
					"branch": {
						"true": [
							{
								"type": "log",
								"msg": "V - ((state.self.value)) ((state.||idPattern||.wordPattern))"
							},
							{
								"type": "showNotification",
								"msgType": "success",
								"msg": "((state.||idPattern||.word)) - %pattern%",
								"duration": 5000
							},
							{
                                "type": "getPealimData",
                                "extractRandomWord": true,
                                "target": "||idPattern||",
                                "verbs": "{{state.||idPattern||.verbs}}"
                            }
						],
						"false": [
							{
								"type": "showNotification",
								"msgType": "danger",
								"msg": "((state.||idPattern||.word)) לא %pattern%",
								"duration": 5000
							}
						]
					}
				}
			]
		}
	}
}